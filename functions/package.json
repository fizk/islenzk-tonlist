{
  "name": "functions",
  "scripts": {
    "lint": "tslint --project tsconfig.json",
    "build": "tsc",
    "serve": "npm run build && firebase serve --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "dev": "nodemon --exec ./node_modules/.bin/ts-node -- ./src/develop.ts",
    "test": "jest"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@firebase/firestore-types": "^0.3.0",
    "@google-cloud/firestore": "^0.13.1",
    "cors": "^2.8.4",
    "elasticsearch": "^14.2.2",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "firebase-admin": "~5.12.0",
    "firebase-functions": "^1.0.2",
    "graphql": "^0.13.2",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "jest": "^22.4.3",
    "mock-cloud-firestore": "git+https://github.com/fizk/mock-cloud-firestore.git#a1de9fb58afce2c34244631f7f8210bc3e0470d2",
    "nodemon": "^1.17.3",
    "ts-jest": "^22.4.5",
    "ts-node": "^6.0.1",
    "tslint": "^5.8.0",
    "typescript": "^2.5.3"
  },
  "jest": {
    "collectCoverage": false,
    "collectCoverageFrom": [
      "**/*.{ts,tsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/@types/**"
    ],
    "coverageReporters": [
      "json",
      "lcov",
      "text",
      "text-summary"
    ],
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "private": true
}
